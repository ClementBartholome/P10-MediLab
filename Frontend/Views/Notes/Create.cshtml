@model NoteViewModel
@{
    ViewData["Title"] = "Créer une note";
}

<section class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h2 class="mb-0">
                        <i class="fa-solid fa-sticky-note me-2"></i>
                        Ajouter une note médicale
                    </h2>
                </div>
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="PatientId" />

                        <div class="mb-4">
                            <label asp-for="Note" class="form-label">Contenu de la note</label>
                            <textarea asp-for="Note" class="form-control" rows="6" required></textarea>
                            <span asp-validation-for="Note" class="text-danger"></span>
                        </div>

                        <div class="d-flex justify-content-between mt-4">
                            <a asp-action="Index" asp-route-patientId="@Model.PatientId" class="btn btn-outline-secondary">
                                <i class="fa-solid fa-ban me-1"></i>
                                Annuler
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="fa-solid fa-save me-1"></i>
                                Enregistrer la note
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>